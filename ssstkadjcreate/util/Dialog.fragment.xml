<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ViewSettingsDialog confirm="sortAndFilterTable">
		<sortItems>
			<ViewSettingsItem text="{SSGW_MM>/CPStockItems/SKUGroup/#@sap:label}" key="SKUGroup"/>
			<ViewSettingsItem text="{SSGW_MM>/CPStockItemSnos/ItemNo/#@sap:label}" key="ItemNo"/>
			<ViewSettingsItem text="{SSGW_MM>/CPStockItemSnos/MaterialNo/#@sap:label}" key="MaterialNo"/>
