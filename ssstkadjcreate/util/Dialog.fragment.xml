			<ViewSettingsItem text="{SSGW_MM>/CPStockItemSnos/Quantity/#@sap:label}" key="Quantity"/>
		</sortItems>
		<filterItems>
			<ViewSettingsCustomItem text="{SSGW_MM>/CPStockItems/SKUGroup/#@sap:label}" key="SKUGroup">
