			</ViewSettingsCustomItem>
			<ViewSettingsCustomItem text="{SSGW_MM>/CPStockItemSnos/MaterialNo/#@sap:label}" key="MaterialNo">
				<customControl>
					<Input tooltip="MaterialNo" liveChange="com.arteriatech.ppc.utils.js.Common.addCustomControlToFilter"/>
				</customControl>
			</ViewSettingsCustomItem>
			<ViewSettingsCustomItem text="{SSGW_MM>/CPStockItemSnos/ManufacturingDate/#@sap:label}" key="ManufacturingDate">
				<customControl>
					<Input tooltip="ManufacturingDate" liveChange="com.arteriatech.ppc.utils.js.Common.addCustomControlToFilter"/>
				</customControl>
			</ViewSettingsCustomItem>
			<ViewSettingsCustomItem text="{SSGW_MM>/CPStockItemSnos/Batch/#@sap:label}" key="Batch">
				<customControl>
					<Input tooltip="Batch" liveChange="com.arteriatech.ppc.utils.js.Common.addCustomControlToFilter"/>
				</customControl>
			</ViewSettingsCustomItem>
			<ViewSettingsCustomItem text="{SSGW_MM>/CPStockItemSnos/Quantity/#@sap:label}" key="Quantity">
